
{  
  "name": "网页二维码",  
  "version": "1.0.0",  
  "description": "current page QR code",  
  "manifest_version": 2,
  //工具栏相关
  "browser_action": {  
    "default_icon": "image/icon.png" ,
    "default_title": "网页二维码",
    "default_popup": "index.html"
  },
   "icons": {
    "16": "image/icon.png",
    "48": "image/icon2.png",
    "128": "image/icon2.png"
  },
  //权限
   "permissions": [
        "http://qr.liantu.com/api.php"
        ,"tabs"
        ,"activeTab"
        ,"notifications"
        ,"storage"
        ,"chrome-extension-resource"
    ]  
} 